<h1>Which contact would you like to delete?</h1>
<table>
  <thead>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Delete?</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
    <tr>
      <th><%= contact.first_name %></th>
      <th><%= contact.last_name %></th>
      <th><%= contact.email %></th>
      <th><a href="/contact/<%= contact.id %>/delete" class="button">Delete</a></th>
    </tr>
  </tbody>

</table>
